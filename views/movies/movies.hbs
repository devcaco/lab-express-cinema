<div class='movies__list'>
  <div class='movies__list-header'>
    <h2>Ironhack Cinema</h2>
    <p>Click on the movie to check the showtimes!</p>
  </div>
  <div class='movies__list-nav'>
    <div class='movies__list--nav-home'><button><a href='/'>Go back</a></button></div>
    <div class='movies__list--nav-new'><button class='btnAddNew'>Add New Movie</button></div>
  </div>
  {{#if tooltip}}
  {{> tooltips message='Movie added successfully to the database!!'}}
  {{/if}}
  <div class='movies__list-container'>
    {{#each movies}}
      <div class='movies__list--container-item'>
        <div><img src='{{this.image}}' alt='{{this.title}}' /></div>
        <div class='movies__list--container--item-title'>{{this.title}}</div>
        <div><a href='/movies/{{this._id}}'>See more</a></div>
      </div>
    {{/each}}
  </div>
</div>