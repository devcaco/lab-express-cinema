<div class='movies__addnew'>
  <div class='movies__addnew-header'>Add Movie to Database</div>
  <div class='movies__addnew-close'>
    <button class='btnClose'>X</button>
  </div>
  <div class='movies__addnew-form'>
    <form action='/add-movie' method='post'>
      <label for='title'>
        Title:
      </label>
      <input type='text' name='title' id='title' required />
      <label for='director'>
        Director:
      </label>
      <input type='text' name='director' id='director' required />
      <label for='stars'>
        Stars:
        <span>(add names separated by commas)</span>
      </label>
      <input type='text' name='stars' id='stars' required />
      <label for='image_url'>
        Image URL:
      </label>
      <input type='url' name='image' id='image' required />
      <label for='description'>
        Description:
      </label>
      <textarea
        name='description'
        id='description'
        cols='30'
        rows='7'
        required
      ></textarea>
      <label for='showtimes'>
        Showtimes:
        <span>(add times separated by commas)</span>
      </label>
      <input type='text' name='showtimes' id='showtimes' required />
      <button type='submit'>Add Movie</button>
      <button class='btnCancel'>Cancel</button>

    </form>
  </div>
</div>